<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_margin="30dp"
        app:cardElevation="20dp"
        >


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="344dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="horizontal">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/view_img"
                android:layout_width="145dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@color/our_black"
                app:riv_corner_radius_bottom_left="25dp"
                app:riv_corner_radius_top_left="25dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/view_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_bold"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:singleLine="true"
                    android:text="Name"
                    android:textColor="@color/our_black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/view_description"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato"
                    android:gravity="start"
                    android:maxLines="5"
                    android:singleLine="false"
                    android:text="Description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_name" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="140dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/ratingbar"
                    app:layout_constraintBottom_toTopOf="@+id/view_price"
                    app:layout_constraintStart_toStartOf="parent" />


                <TextView
                    android:id="@+id/view_rating"
                    android:layout_width="29dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="45dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center_vertical"
                    android:text="(56)"
                    android:textColor="@color/our_black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/view_price"
                    android:layout_width="75dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/ic_linear_backgroud_price"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:paddingStart="6dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="2dp"
                    android:text="300 tg"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

