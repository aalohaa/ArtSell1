<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:fab="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/colorPrimary"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:id="@+id/drawer_layout"
        tools:context=".activities.MainActivity">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_corner"
            android:elevation="0dp"
            app:itemIconSize="36dp"
            app:itemIconTint="@drawable/item_selector"
            app:itemRippleColor="@android:color/transparent"
            app:labelVisibilityMode="unlabeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_navmenu" />

        <FrameLayout
            android:background="@color/black"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </FrameLayout>
    </RelativeLayout>
    <ImageButton
        android:id="@+id/fabMenu"
        android:background="@android:color/transparent"
        android:src="@drawable/plus1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="5dp"
        android:elevation="0dp"
        android:scaleX="2"
        android:scaleY="2"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nav_profile"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:fabSize="normal"
        android:scaleType="center"
        app:fabCustomSize="60dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="16dp"
        android:elevation="0dp"
        android:src="@drawable/profile"
        android:visibility="invisible"
        app:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/fabMenu"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nav_category"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="center"
        app:fabCustomSize="60dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="16dp"
        android:elevation="0dp"
        android:src="@drawable/ic_baseline_category_24"
        android:visibility="invisible"
        app:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_profile"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nav_offers"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="center"
        app:fabCustomSize="60dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="16dp"
        android:elevation="0dp"
        android:src="@drawable/ic_baseline_local_offer_24"
        android:visibility="invisible"
        app:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_category"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nav_new_products"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="center"
        app:fabCustomSize="60dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="16dp"
        android:elevation="0dp"
        android:src="@drawable/ic_facebook"
        android:visibility="invisible"
        app:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_offers"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nav_my_carts"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="center"
        app:fabCustomSize="60dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="16dp"
        android:elevation="0dp"
        android:src="@drawable/ic_baseline_shopping_cart_24"
        android:visibility="invisible"
        app:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_new_products"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>